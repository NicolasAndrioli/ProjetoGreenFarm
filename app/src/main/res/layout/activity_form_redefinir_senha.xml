<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".FormRedefinirSenha">

    <TextView
        android:id="@+id/title_redefinirsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_esqueci_senha"
        android:textSize="50sp"
        android:textColor="@color/branco"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/title_redefinirsenha1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_esqueci_senha1"
        android:textSize="45sp"
        android:textColor="@color/branco"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_redefinirsenha"
         />

    <TextView
        android:id="@+id/title_complemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_complemento"
        android:textColor="@color/preto"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/title_redefinirsenha1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/title_complemento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_complemento1"
        android:textColor="@color/preto"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/title_complemento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/containerComponentsSmall"
        style="@style/ContainerComponentsSmall"
        app:layout_constraintTop_toBottomOf="@id/title_complemento1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <EditText
        android:id="@+id/emailRecuperacao"
        style="@style/Edit_Text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableRight="@drawable/ic_email"
        app:layout_constraintTop_toTopOf="@id/containerComponentsSmall"
        app:layout_constraintStart_toStartOf="@id/containerComponentsSmall"
        app:layout_constraintEnd_toEndOf="@id/containerComponentsSmall" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_linkderecuperação"
        style="@style/Button"
        android:text="Enviar Link de Recuperação"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/containerComponentsSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>